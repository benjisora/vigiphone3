<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cstb.vigiphone3.fragment.RecordingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_emitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/emitter_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="@string/emitter"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cidlac_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/emitter_section"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/cid_lac" />

                <TextView
                    android:id="@+id/cidlac_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/emitter_section"
                    android:layout_toEndOf="@id/cidlac_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

                <TextView
                    android:id="@+id/mccmnc_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/cidlac_label"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/mcc_mnc" />

                <TextView
                    android:id="@+id/mccmnc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/cidlac_text"
                    android:layout_toEndOf="@id/mccmnc_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

                <TextView
                    android:id="@+id/op_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/mccmnc_label"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/operator" />

                <TextView
                    android:id="@+id/op_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/mccmnc_text"
                    android:layout_toEndOf="@id/op_name_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

                <TextView
                    android:id="@+id/type_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/op_name_label"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/network_type" />

                <TextView
                    android:id="@+id/type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/op_name_text"
                    android:layout_toEndOf="@id/type_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

                <TextView
                    android:id="@+id/strengh_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/type_label"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/signal_strengh_dbm" />

                <TextView
                    android:id="@+id/strengh_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/type_text"
                    android:layout_toEndOf="@id/strengh_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

                <TextView
                    android:id="@+id/neighbours_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/strengh_label"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/neighbours_2g" />

                <TextView
                    android:id="@+id/neighbours_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/strengh_text"
                    android:layout_toEndOf="@id/neighbours_label"
                    android:gravity="end"
                    android:text="@string/fetching" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_gps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_emitter"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/gps_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="@string/position"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/latitude_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/gps_section"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/latitude" />

                <TextView
                    android:id="@+id/latitude_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/gps_section"
                    android:layout_toEndOf="@id/latitude_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

                <TextView
                    android:id="@+id/longitude_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/latitude_label"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/longitude" />

                <TextView
                    android:id="@+id/longitude_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/latitude_text"
                    android:layout_toEndOf="@id/longitude_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_sensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_gps"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/sensor_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:text="@string/sensors"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/accelerometer_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/sensor_section"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/accelerometer" />

                <TextView
                    android:id="@+id/accelerometer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/sensor_section"
                    android:layout_toEndOf="@id/accelerometer_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

                <TextView
                    android:id="@+id/gyroscope_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/accelerometer_label"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/gyroscope" />

                <TextView
                    android:id="@+id/gyroscope_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/accelerometer_text"
                    android:layout_toEndOf="@id/gyroscope_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

                <TextView
                    android:id="@+id/magneticField_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/gyroscope_label"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/magnetic_field" />

                <TextView
                    android:id="@+id/magneticField_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/gyroscope_text"
                    android:layout_toEndOf="@id/magneticField_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

                <TextView
                    android:id="@+id/light_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/magneticField_label"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/light" />

                <TextView
                    android:id="@+id/light_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/magneticField_text"
                    android:layout_toEndOf="@id/light_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

                <TextView
                    android:id="@+id/proximity_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/light_label"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/proximity" />

                <TextView
                    android:id="@+id/proximity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/light_text"
                    android:layout_toEndOf="@id/proximity_label"
                    android:gravity="end"
                    android:text="@string/fetching" />

                <TextView
                    android:id="@+id/orientation_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/proximity_label"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:text="@string/orientation" />

                <TextView
                    android:id="@+id/orientation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/proximity_text"
                    android:layout_toEndOf="@id/orientation_label"
                    android:gravity="end"
                    android:text="@string/fetching" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_sensor"
            android:orientation="horizontal">

            <Button
                android:id="@+id/calibrate_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/calibrate"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Space
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/uncalibrate_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/uncalibrate"
                android:textColor="#fff"
                android:textSize="20sp" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>
